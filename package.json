{
  "name": "somanyconflicts-jj",
  "displayName": "So Many Conflicts (JJ)",
  "description": "Resolve Jujutsu (JJ) conflicts interactively â€” group related conflicts, suggest resolution order and strategy.",
  "version": "1.0.0-jj",
  "preview": true,
  "icon": "media/logo.png",
  "publisher": "nmindz",
  "repository": {
    "type": "git",
    "url": "https://github.com/nmindz/somanyconflicts-jj"
  },
  "homepage": "https://github.com/nmindz/somanyconflicts-jj",
  "license": "MIT",
  "author": {
    "name": "Evandro Camargo",
    "url": "https://github.com/nmindz"
  },
  "contributors": [
    {
      "name": "Bo Shen (Symbolk)",
      "url": "https://github.com/Symbolk"
    }
  ],
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "jj",
    "jujutsu",
    "conflict",
    "resolve",
    "merge"
  ],
  "activationEvents": [
    "onCommand:somanyconflicts-jj.scan",
    "onCommand:somanyconflicts-jj.start",
    "onCommand:somanyconflicts-jj.refresh",
    "onCommand:somanyconflicts-jj.next",
    "onCommand:somanyconflicts-jj.how",
    "onView:suggestedConflictTreeView",
    "onView:allConflictTreeView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "So Many Conflicts (JJ)",
      "properties": {
        "somanyconflicts-jj.namingConvention": {
          "type": "string",
          "enum": [
            "jj-native",
            "git-friendly"
          ],
          "default": "jj-native",
          "description": "Naming convention for conflict sides. 'jj-native' uses Side 1, Side 2, etc. 'git-friendly' uses Current/Incoming (only for 2-way conflicts)."
        },
        "somanyconflicts-jj.scanMode": {
          "type": "string",
          "enum": [
            "jj-cli",
            "file-scan"
          ],
          "default": "jj-cli",
          "description": "How to discover files with conflicts. 'jj-cli' uses `jj resolve --list` (recommended). 'file-scan' scans all files for JJ conflict markers."
        }
      }
    },
    "colors": [
      {
        "id": "somanyconflicts.border_color",
        "description": "Background color for suggested resolution",
        "defaults": {
          "dark": "#FFFF00",
          "light": "#FF4500",
          "highContrast": "#FF000055"
        }
      },
      {
        "id": "somanyconflicts.background_color",
        "description": "Background color for suggested resolution",
        "defaults": {
          "dark": "#006400",
          "light": "#90EE90",
          "highContrast": "#FF000055"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "conflictTreeViewPanel",
          "title": "So Many Conflicts (JJ)",
          "icon": "media/merge.png"
        }
      ]
    },
    "views": {
      "conflictTreeViewPanel": [
        {
          "id": "suggestedConflictTreeView",
          "name": "Grouped and Ordered Conflicts",
          "contextualTitle": "So Many Conflicts (JJ)",
          "icon": "media/merge.png"
        },
        {
          "id": "allConflictTreeView",
          "name": "All JJ Conflicts",
          "contextualTitle": "So Many Conflicts (JJ)",
          "icon": "media/merge.png"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "somanyconflicts-jj.refresh",
          "when": "view == suggestedConflictTreeView",
          "group": "navigation@10"
        },
        {
          "command": "somanyconflicts-jj.refresh",
          "when": "view == allConflictTreeView",
          "group": "navigation@10"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "suggestedConflictTreeView",
        "contents": "Click this button to group and order related JJ conflicts for quicker resolution.\n[Group Related Conflicts](command:somanyconflicts-jj.start)"
      },
      {
        "view": "allConflictTreeView",
        "contents": "Click this button to scan all JJ conflicts in the opened directory or repository.\n[Scan All Conflicts](command:somanyconflicts-jj.scan)"
      }
    ],
    "commands": [
      {
        "command": "somanyconflicts-jj.scan",
        "title": "So Many Conflicts (JJ): Scan All JJ Conflicts"
      },
      {
        "command": "somanyconflicts-jj.start",
        "title": "So Many Conflicts (JJ): Where to Start Resolving?"
      },
      {
        "command": "somanyconflicts-jj.refresh",
        "title": "So Many Conflicts (JJ): Refresh all Results",
        "icon": "$(refresh)"
      },
      {
        "command": "somanyconflicts-jj.next",
        "title": "So Many Conflicts (JJ): What's Related Conflicts?"
      },
      {
        "command": "somanyconflicts-jj.how",
        "title": "So Many Conflicts (JJ): How to Resolve this Conflict?"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts --cache",
    "test": "node ./out/test/runTest.js",
    "postinstall": "node ./scripts/build.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "glob": "^7.1.6",
    "mocha": "^9.0.3",
    "tree-sitter": "^0.19.0",
    "tree-sitter-cli": "^0.20.0",
    "tree-sitter-java": "^0.19.1",
    "tree-sitter-javascript": "^0.19.0",
    "tree-sitter-python": "^0.19.0",
    "tree-sitter-typescript": "^0.19.0",
    "typescript": "^4.3.5",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "@dagrejs/graphlib": "^2.1.4",
    "jaccard": "^0.4.0",
    "queue-typescript": "^1.0.1",
    "string-similarity": "^4.0.4",
    "web-tree-sitter": "^0.19.4"
  }
}
